.content
  width calc(100% - 6rem)
  max-width 100rem
  height auto
  //background-color #e7e7e7
  margin 3rem auto
  overflow hidden
  .item
    width 8rem
    height 8rem
    background-color #cccccc
    margin 0.5rem
    margin-top 0
    float left
    position relative
    overflow hidden
    .item-icon
      width 100%
      height 100%
      font-size 4rem
      line-height 8rem
      display flex
      justify-content center
      align-content center
      color #ffffff
      //background-color #f1f1f1
    .item-text
      width 100%
      height 100%
      position absolute
      z-index 2
      top -8rem
      left 0
      cursor pointer
      background-color #ff4700
      display flex
      justify-content center
      align-items center
      font-size 1rem
      //transform pop 0.5s 1
      //-webkit-animation pop 0.5s 1
      -webkit-transition: top .5s
      -moz-transition: top .5s
      -ms-transition: top .5s
      -o-transition: top .5s
      transition: top .5s
    .item-shadow
      width 100%
      height 100%
      position absolute
      //background-color rgba(255,255,255,0)
      top 0
      left 0
      &:hover .item-text
        top 0
