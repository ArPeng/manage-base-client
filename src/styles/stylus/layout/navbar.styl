@import "../basic/index.styl"
.navbar-container
  width 100%
  height 50px
  background-color $bg-light-dark
  display flex
  .hamburger-icon
    height @height
    padding 0 10px
    font-size 1.5rem
    width 3rem
    color $font-dark
    line-height @height
    cursor pointer
    transform rotate(0deg);
    transition transform 0.3s
    &.mini
      transform rotate(-90deg);
