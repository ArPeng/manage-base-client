@import "../basic"
.navbar-container
  width 100%
  height 50px
  background-color $bg-light-dark
  position relative
  display flex
  .hamburger-icon
    height @height
    padding 0 10px
    font-size 1.5rem
    width 3rem
    color $font-dark
    line-height @height
    cursor pointer
    transform rotate(90deg);
    transition transform 0.3s
    &.mini
      transform rotate(0deg);
  .breadcrumbs
    display flex
    align-items center
    span>a
      color $font-gray
  .user-info
    height @height
    position absolute
    top 0
    right 0
