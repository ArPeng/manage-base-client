@import "../basic/index.styl"
.body
  display flex
  flex-direction column
  .body-header
    width 100%
    height 60px
    background-color $bg-dark-light
    display flex
    .title
      flex 1
      height @height
      padding 0 20px
      line-height @height
      font-size 20px
      color $font-light
    .userinfo
      height @height
      padding 0 10px
      margin 0 10px
      display flex
      align-items center
      cursor pointer
      transition background-color 0.5s
      color $font-light
      &:hover
        background-color $bg-dark-light-hover
      .avatar
        width 30px
        height @width
        border-radius @width
        >img
          width @width
          height @width
          border-radius @border-radius
      .username
        font-size 14px
        margin-left 5px
      .triangle
        width 20px
        height 20px
        font-size 14px
        margin-left 5px
        transform rotate(0deg)
        transition transform .3s
        display flex
        align-items center
        justify-content center
        &.open
          transform rotate(-180deg)
  .body-content
    width 100%
    flex 1
