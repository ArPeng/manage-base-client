@import "../basic"
.body
  .body-header
    width 100%
    height 60px
    background-color $bg-dark-light
    display flex
    .title
      flex 1
      height @height
      padding 0 20px
      line-height @height
      font-size 20px
      color $font-light
  .body-content
    width 100%
    flex 1
    .container
      width 95%
      margin 2.5%
      .item
        width 100px
        height 100px
        margin 10px
        float left
        overflow hidden
        position relative
        border-radius 5px
        box-shadow 0 0 10px $bg-light-dark
        transition all 0.5s
        cursor pointer
        &:hover
          box-shadow 0 0 10px $bg-dark
        .icon
          width @width
          height @height
          display flex
          align-items center
          justify-content center
          background-color $bg-light
          font-size 2.5rem
          color $font-dark
        .name
          width @width
          height @height
          position absolute
          left 0
          top -@height
          transition top 0.5s
          background-color $bg-light-dark
          display flex
          align-items center
          justify-content center
          font-size 1rem
          color $font-dark
          padding 10px
        &:hover
          >.name
            top 0
