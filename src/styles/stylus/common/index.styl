@import "reset.styl"
/*
** 公共样式
*/
@import "../basic/functions.styl"
@import "reset_muse_ui.styl"
@import "btn.styl"
html,body,.body
  min-width 100%
  min-height 100%
  font-family Helvetica Neue,Helvetica,PingFang SC,Hiragino Sans GB,Microsoft YaHei,Arial,sans-serif
/*
** 去除chrome浏览器input自动填充之后的黄色背景
 */
input:-webkit-autofill
  -webkit-box-shadow 0 0 0px 1000px white inset
  -webkit-text-fill-color #333
html,body,.body
  width 100%
  height 100%
ul
  margin 0
  padding 0
  li
    list-style none
/* 可以设置不同的进入和离开动画 */
/* 设置持续时间和动画函数 */
.fade-in-enter-active
  transition opacity  .3s ease
.fade-in-leave-active
  transition opacity  0s ease
.fade-in-enter, .fade-in-leave-to
  opacity: 0
/**
**   main body
 */
.app-container
  width 100%
  min-height 100%
  padding 20px
  .app-header
    width 100%
    height 60px
    display flex
    align-items center
  .app-content
    width 100%
    height auto
    overflow hidden
